doctype html
html
    head

        title Events Platform

        meta(charset='utf-8')
        meta(content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport')
        meta(name='viewport' content='width=device-width')
        meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')

        link(rel='apple-touch-icon' sizes='76x76' href='/favicon.ico')
        link(rel='icon' type='image/ico' sizes='96x96' href='/favicon.ico')

        link(href='/stylesheets/bootstrap.min.css' rel='stylesheet')
        link(href='/stylesheets/paper-dashboard.css' rel='stylesheet')
        link(href='/stylesheets/main.css' rel='stylesheet')
        link(href='/stylesheets/animate.min.css' rel='stylesheet')
        link(href='/stylesheets/client.css' rel='stylesheet')
        link(href='/stylesheets/themify-icons.css' rel='stylesheet')

    body

        .wrapper

            .sidebar(data-background-color='white' data-active-color='primary')

                .sidebar-wrapper

                    .logo
                        a.simple-text(href='/')
                            img(src='/images/rwlogo.png' alt="RED Wizard Logo")
                            br
                            span EVENTS PLATFORM
                    //- logo end

                    .nav-tabs-navigation
                        .nav-tabs-wrapper

                            ul#tabs.nav(data-tabs='tabs')
                                li.active
                                    a.client-btn#home-link(href='#home' onclick='showContent(this.id)' data-toggle='tab')
                                    i.ti-home
                                    p Home
                                li
                                    a.client-btn#profile-link(href='#profile' onclick='showContent(this.id)' data-toggle='tab')
                                    i.ti-user
                                    p My Profile
                                li
                                    a.client-btn#events-link(href='#events' onclick='showContent(this.id)' data-toggle='tab')
                                    i.ti-view-list-alt
                                    p Events
                                li
                                    a.client-btn#activity-link(href='#activity-log' onclick='showContent(this.id)' data-toggle='tab')
                                    i.ti-panel
                                    p Activity Log
                                li
                                    a.client-btn#notif-link(href='#notifications' onclick='showContent(this.id)' data-toggle='tab')
                                    i.ti-world
                                    p Notifications
                                li
                                    a.client-btn#settings-link(href='#settings' onclick='showContent(this.id)' data-toggle='tab')
                                    i.ti-settings
                                    p Settings
                                li
                                    a#logout-btn(href='#' data-toggle='modal' data-target='#logout-modal')
                                    i.ti-share-alt
                                    p Log out

            //- End of sidebar

        .main-panel

           block content

            footer.footer.footer-black

                .container-fluid
                    nav.pull-left
                        ul
                            li
                                a(href='#') RED Wizard Events Management
                            li
                                a(href='#')
                                    span.ti-facebook
                            li
                                a(href='#')
                                    span.ti-twitter-alt
                            li
                                a(href='#')
                                    span.ti-instagram

                    .copyright.pull-right &copy; All Rights Reserved 2017

            //- End of Footer


<!-- Log out Modal -->

.modal.fade#logout-modal(tabindex='-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true')
    .modal-dialog

        .modal-content

            .modal-header
                button.close(type='button' data-dismiss='modal' aria-hidden='true') &times;
                h4.modal-title#myModalLabel Events Platform

            .modal-body
                p.text-center#log-out-body(style='margin: 0;') Are you sure you want to log out?

            .modal-footer
                .pull-left.text-center(style='width: 50%;')
                    button.btn.btn-default.btn-simple(type='button' data-dismiss='modal') Cancel
                .pull-left.text-center(style='width: 50%;')
                    button.btn.btn-default.btn-simple(type='button' data-dismiss='modal') Log out

<!-- Log out Modal End-->


script(src='/javascripts/jquery-1.10.2.js', type='text/javascript')
script(src='/javascripts/bootstrap.min.js', type='text/javascript')
script(src='/javascripts/paper-dashboard.js', type='text/javascript')
script(src='/javascripts/client.js', type='text/javascript')